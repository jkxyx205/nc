<?xml version="1.0" encoding="UTF-8"?>
<sitemesh>
   
    <!-- 指明满足“/*”的页面，将被"/WEB-INF/views/decorators/decorator.html"所装饰 -->
    <mapping path="/*" decorator="/WEB-INF/pages/decorator/decorator.jsp" />
    
     <!-- 指明满足"/exclude.jsp*"的页面，将被排除，不被装饰 -->
     <mapping path="/teacher/gotoEdit/*" exclude="true" />
     <mapping path="/ckeditor/uploadImg" exclude="true" />
     <mapping path="/notice/gotoDetail/*" exclude="true" />
     
     <!--测试 -->
     <mapping path="/test/*" exclude="true" />
     <mapping path="/login.jsp" exclude="true" />
     
</sitemesh>